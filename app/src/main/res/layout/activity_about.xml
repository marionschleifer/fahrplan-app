<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:text="Marion Schleifer"
                android:padding="3dip" />
            <TextView
                android:text="Helga Ganz"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="marion.schleifer@gmail.com"
                android:padding="3dip" />
            <TextView
                android:text="helga.elisa.ganz@gmail.com"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/marion"
                android:id="@+id/marion"
                android:padding="3dip"
             />
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/helga"
                android:id="@+id/helga"
                android:gravity="right"
                android:padding="3dip"
                android:layout_marginLeft="45dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>